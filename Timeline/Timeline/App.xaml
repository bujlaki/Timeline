<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodel="clr-namespace:Timeline.ViewModels.Base"
             xmlns:styles="clr-namespace:Timeline.Styles"
             xmlns:converters="clr-namespace:Timeline.Converters"
             x:Class="Timeline.App">
    <Application.Resources>
        <ResourceDictionary MergedWith="styles:SMain">
            <viewmodel:VMLocator x:Key="vmLocator" />
            <converters:InverseBoolConverter x:Key="inverseBoolConverter" />

            <ControlTemplate x:Key="UserPagesTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="menu">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{TemplateBinding Parent.BindingContext.CmdMenu}"/>
                            </Image.GestureRecognizers>
                        </Image>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0" 
                                   Text="{TemplateBinding Parent.BindingContext.LoggedInUser.UserName}" 
                                   TextColor="#fbf0d2"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"/>
                            
                            <Label Grid.Row="1" 
                                   Text="{TemplateBinding Parent.BindingContext.LoggedInUser.Email}" 
                                   TextColor="#fbf0d2"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"/>
                        </Grid>

                        <Image Grid.Column="2" Source="{TemplateBinding Parent.BindingContext.LoggedInUser.PhotoUrl}" />

                    </Grid>

                    <BoxView Grid.Row="0" VerticalOptions="End" HeightRequest="2" BackgroundColor="White" />
                    
                    <ContentPresenter Grid.Row="1" />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
