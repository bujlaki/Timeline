<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Controls.AbsActivityIndicator">
    <ContentView.Content>
        <AbsoluteLayout BackgroundColor="#77000000">
            <AbsoluteLayout AbsoluteLayout.LayoutFlags="All" 
                            AbsoluteLayout.LayoutBounds="0.5,0.5,0.4,0.2"
                            BackgroundColor="Black">
                <ActivityIndicator x:Name="indicator" 
                                   AbsoluteLayout.LayoutFlags="PositionProportional" 
                                   AbsoluteLayout.LayoutBounds="0.5, 0.4, AutoSize, AutoSize"/>
                <Label x:Name="message" 
                       AbsoluteLayout.LayoutFlags="PositionProportional" 
                       AbsoluteLayout.LayoutBounds="0.5, 0.8, AutoSize, AutoSize"
                       TextColor="White"/>
            </AbsoluteLayout>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>