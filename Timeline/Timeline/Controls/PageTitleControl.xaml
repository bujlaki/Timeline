<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Controls.PageTitleControl">
    <ContentView.Content>
        <AbsoluteLayout>
            <Label x:Name="titleLabel" 
                   AbsoluteLayout.LayoutFlags="PositionProportional" 
                   AbsoluteLayout.LayoutBounds="0.5, 0.2, AutoSize, AutoSize" 
                   Text="TITLE" 
                   Style="{StaticResource titleLabel}"/>

            <BoxView x:Name="titleLine" 
                     AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" 
                     AbsoluteLayout.LayoutBounds="0.5, 0.6, 0.8, 2"
                     BackgroundColor="{StaticResource textColor2}"/>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>