<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Timeline.Controls"
             x:Class="Timeline.Views.VTimelineEvent"
             Title="TIMELINE_EVENT"
             BindingContext="{Binding TimelineEventViewModel, Source={StaticResource vmLocator}}"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#234b64">
    <ContentPage.Content>
        <RelativeLayout>
            <RelativeLayout>
                
            </RelativeLayout>
            
            <Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width,Factor=0.9,Constant=0}"
                  VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Source="title"/>

                <controls:XEntry Grid.Row="1" 
                             VerticalOptions="Start"
                             Text="{Binding Event.Title, Mode=OneWayToSource}" 
                             TextColor="#eeebd3" 
                             FontSize="16"
                             Placeholder="title"
                             PlaceholderColor="#bfd9f3"/>

                <Label Grid.Row="2" Text="Description"/>
                <Editor Grid.Row="3"
                            Text="{Binding Event.Description, Mode=OneWayToSource}"
                            TextColor="#234b64"
                            BackgroundColor="#eeebd3"
                            FontSize="14"/>

                <Button Grid.Row="6" 
                    Text="Create" 
                    TextColor="#234B64"
                    BackgroundColor="#bfd9f3"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Command="{Binding CmdCreate}"
                    CommandParameter="1"
                    BorderRadius="10"
                    BorderWidth="2"
                    BorderColor="#eeebd3"/>

            </Grid>
        </RelativeLayout>


    </ContentPage.Content>
</ContentPage>