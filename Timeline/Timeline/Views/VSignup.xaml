<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Views.VSignup"
             Title="SIGNUP"
             BindingContext="{Binding SignupViewModel, Source={StaticResource vmLocator}}"
             BackgroundImage="bkg3">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Label Text="SIGNUP" 
                       VerticalOptions="Center"
                       FontSize="28"
                       TextColor="#dad0c8"/>

                <Entry Grid.Row="1" 
                       VerticalOptions="FillAndExpand"
                       Text="{Binding Username, Mode=OneWayToSource}" 
                       TextColor="#dad0c8" 
                       FontSize="18"
                       Placeholder="username"
                       PlaceholderColor="#dad0c8"/>

                <Entry Grid.Row="2" 
                       VerticalOptions="FillAndExpand"
                       IsPassword="true" 
                       Text="{Binding Password, Mode=OneWayToSource}"
                       TextColor="#dad0c8"
                       FontSize="18"
                       Placeholder="password"
                       PlaceholderColor="#dad0c8"/>

                <Entry Grid.Row="3" 
                       VerticalOptions="FillAndExpand"
                       IsPassword="true" 
                       Text="{Binding Email, Mode=OneWayToSource}"
                       TextColor="#dad0c8"
                       FontSize="18"
                       Placeholder="e-mail"
                       PlaceholderColor="#dad0c8"/>

                <Button Grid.Row="4" 
                        Text="Submit" 
                        Command="{Binding CmdSignup}"
                        TextColor="#dad0c8"
                        BackgroundColor="#8E5158"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        BorderRadius="10"
                        BorderWidth="2"
                        BorderColor="#dad0c8"/>
                

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>