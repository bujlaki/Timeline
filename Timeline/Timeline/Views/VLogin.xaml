<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Views.VLogin"
             Title="LOGIN"
             BindingContext="{Binding LoginViewModel, Source={StaticResource vmLocator}}"
             BackgroundImage="background">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Label Text="TIMELINE" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   FontSize="28"/>

            <StackLayout Grid.Row="1">
                <Entry Placeholder="username" Text="{Binding Username, Mode=OneWayToSource}"/>
                <Entry IsPassword="true" Text="{Binding Password, Mode=OneWayToSource}"/>
                <Button Text="Login" Command="{Binding CmdUserPassLogin}"/>
                <Button Text="Forgot password" />
                <Label Text="{Binding LoginResult}"/>
            </StackLayout>

            <Button Grid.Row="2" Text="Create new account" Command="{Binding CmdSignup}"/>

            <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Grid.Row="3">
                <Label Text="- or -" HorizontalOptions="Center"/>
                <Button Text="Login using GMail" Command="{Binding CmdGoogleLogin}"/>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>

</ContentPage>