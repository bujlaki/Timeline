<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Views.VLogin"
             Title="LOGIN"
             BindingContext="{Binding LoginViewModel, Source={StaticResource vmLocator}}"
             BackgroundImage="bkg">
    <ContentPage.Content>
        <Grid IsEnabled="{Binding Busy,Converter={StaticResource inverseBoolConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Text="LOGIN" 
                       VerticalOptions="Center"
                       FontSize="28"
                       TextColor="#ffbc42"/>

                <Entry Grid.Row="1" 
                       VerticalOptions="FillAndExpand"
                       Text="{Binding Username, Mode=OneWayToSource}" 
                       TextColor="#d0cfcf" 
                       FontSize="14"
                       Placeholder="username"/>

                <Entry Grid.Row="2" 
                       VerticalOptions="FillAndExpand"
                       IsPassword="true" 
                       Text="{Binding Password, Mode=OneWayToSource}"
                       TextColor="#d0cfcf"
                       FontSize="14"
                       Placeholder="password"/>
               

                <Button Grid.Row="3" 
                        Text="Login" 
                        TextColor="#d0cfcf"
                        BackgroundColor="#114b5f"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Command="{Binding CmdUserPassLogin}"
                        BorderRadius="10"
                        BorderWidth="1"
                        BorderColor="#ffbc42"/>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                       Text="Forgot password?" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" 
                       TextColor="#ffbc42">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CmdForgotPassword}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Grid.Column="1" 
                       Text="New account" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontAttributes="Bold" 
                       TextColor="#ffbc42">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CmdSignup}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>


                <BoxView Grid.Row="5" 
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="End"
                         Color="#114b5f"
                         HeightRequest="2"/>

                <Button Grid.Row="6" 
                        Text="Login with Google"
                        BackgroundColor="#114b5f"
                        TextColor="#d0cfcf"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Image="google"
                        Command="{Binding CmdGoogleLogin}"
                        BorderRadius="10"
                        BorderWidth="1"
                        BorderColor="#ffbc42"/>

            </Grid>
        </Grid>

    </ContentPage.Content>

</ContentPage>