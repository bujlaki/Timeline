<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timeline.Views.VLogin"
             Title="LOGIN"
             BindingContext="{Binding LoginViewModel, Source={StaticResource vmLocator}}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Text="Login to Timeline" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   FontSize="28"/>
            
            <StackLayout VerticalOptions="StartAndExpand" Grid.Row="1">
                <Label Text="Username" />
                <Entry x:Name="usernameEntry" Placeholder="username" />
                <Label Text="Password" />
                <Entry x:Name="passwordEntry" IsPassword="true" />
                <Button Text="Login" />
                <Button Text="Login using GMail" Command="{Binding CmdGoogleLogin}"/>
                <Label x:Name="messageLabel" Text="{Binding LoginResult}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>